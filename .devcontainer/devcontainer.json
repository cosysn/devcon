{
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "user": "vscode",
  "workspace": "/home/vscode/workspace",
  "features": {
    "docker-in-docker": {},
    "git": {},
    "go": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "github.copilot"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.eol": "\n",
        "editor.formatOnSave": true
      }
    }
  },
  "postCreateCommand": "go mod download"
}
